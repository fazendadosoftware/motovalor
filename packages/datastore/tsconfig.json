{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib/cjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "composite": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}