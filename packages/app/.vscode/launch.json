{
  "configurations": [
    {
      "type": "node",
      "name": "Jest Workspace",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "args": [
        "test",
        "--runInBand",
        "--watchAll=false"
      ]
    },
      {
        "type": "node",
        "name": "Jest File",
        "request": "launch",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "disableOptimisticBPs": true,
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "yarn",
        "args": [
          "test",
          "${fileBasename}",
          "--runInBand",
          "--watchAll=false"
        ]
      }
  ]
}